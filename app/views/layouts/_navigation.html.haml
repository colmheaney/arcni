.nav-container.grid
  %nav.nav
    .brand.pull-left
      = link_to image_tag("company_logo.jpg"), root_path
    %label.show-menu{ for: "show-menu" } 
      = icon("bars", '', class: "fa-2x")
    %input#show-menu{ type: "checkbox", role: "button" }
    %ul.pull-right#menu
      %li.selected{ name: "/" }=  link_to "Home", root_path
      %li{ name: "/about" }=      link_to "About Us", about_path
      %li{ name: "/education" }=  link_to "Education", education_path
      %li{ name: "/hands-on-history" }=     link_to "Hands on History", hands_on_history_path
      %li{ name: "/projects" }=  link_to "Projects", projects_path
      %li{ name: "/news" }=  link_to "News", news_path
      %li{ name: "/contact" }=  link_to "Contact Us", contact_path, { data: { no_turbolink: true } } 

